{
  "compilerOptions": {
    "outDir": "./dist/js/",
//    "strictNullChecks": true,
//    "noUnusedLocals": true,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    //
    "module": "es2015",
    "target": "es5",
    "jsx": "react",
    "types": ["@types/chrome"],
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2015",
      "scripthost",
      "es2015.promise",
      "es2017"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules"
  ]
}