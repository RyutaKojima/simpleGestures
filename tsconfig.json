{
  "compilerOptions": {
    "outDir": "./dist/js/",
    "noImplicitAny": false,
    "module": "es2020",
    "target": "es5",
    "jsx": "react",
    "types": ["chrome"],
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2015",
      "scripthost",
      "es2015.promise"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/js/app/**/*.ts"  // 対象フォルダーを指定
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
